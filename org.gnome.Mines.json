{
    "app-id": "org.gnome.Mines",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-mines",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--metadata=X-DConf=migrate-path=/org/gnome/Mines/"
    ],
    "cleanup": [
        "/include",
        "/lib/*.la",
        "/lib/pkgconfig",
        "/share/man",
        "/share/vala"
    ],
    "modules": [
        {
            "name": "libgnome-games-support",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libgnome-games-support.git",
                    "tag": "1.8.2"
                }
            ]
        },
        {
            "name": "gnome-mines",
            "buildsystem": "meson",
            "sources": [
                {
                "type": "git",
                "url": "https://gitlab.gnome.org/GNOME/gnome-mines.git",
                "tag": "40.1",
                "commit": "c7a2abc8"
                },
                {
                    "type": "patch",
                    "path": "fix-appdata.xml.patch"
                }
            ]
        }
    ]
}
